@using RedRobin.DataAccess.Models
@model IngredientCandidates
@{
    Layout = null;
}
    <div class="match-control byname">
    <h3>Match Candidates By Name</h3>
@foreach (var ingredient in Model.ByNameCandidates)
{
       <div>
        Match with this ingredient

        @Html.RadioButton(Model.XmlIngredient.ItemIngredientGuid, ingredient.DataObjectId)
        <ul>
            <li>Display Name: @ingredient.displayname</li>
            <li>Manage Name: @ingredient.managename</li>
            <li>Guid: @ingredient.DataObjectId</li>
            <li>Calories: @ingredient.Calories</li>
        </ul>
       
       </div>

}
</div>
    <div class="match-control byprevious">
    <h3>Previously Matched Ingredients</h3>
@foreach (var ingredient in Model.ByPreviousCandidates)
{

       <div>
        Match with this ingredient
        @Html.RadioButton(Model.XmlIngredient.ItemIngredientGuid, ingredient.DataObjectId)
        <ul>
            <li>Display Name: @ingredient.displayname</li>
            <li>Manage Name: @ingredient.managename</li>
            <li>Guid: @ingredient.DataObjectId</li>
            <li>Calories: @ingredient.Calories</li>
        </ul>
       
       </div>

}

    </div>
