@{
    ViewBag.Title = "Basic Error Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Ohh shit, somethings gone wrong...</h2>
@{ Exception e = ViewBag.Exception; }

<h4>Error message:</h4>
<pre>
@e.Message
</pre>
@if (e.InnerException != null && !String.IsNullOrWhiteSpace(e.InnerException.ToString()))
{
    <h4>Error exception:</h4>
    <pre>@e.InnerException</pre>
}

